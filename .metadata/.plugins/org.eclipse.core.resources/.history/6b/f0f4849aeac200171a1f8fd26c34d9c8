package leetcode;


class Solution {
    public String convert(String s, int numRows) {
    	int colGroup = (int) Math.ceil(new Double(s.length())/numRows);
    	int sizeGroup = 0;
    	if (numRows%2 == 0) {
    		sizeGroup = (numRows+2)*colGroup/sizeGroup;
    	}else {
    		sizeGroup = (numRows+1)*colGroup/sizeGroup;
    	}
    	String[] OutputStream = new String[s.length()];
    	double doubleCols = new Double(s.length()/numRows);
    	int numCols = 0;
    	if (doubleCols > new Double(doubleCols).intValue()) {
    		numCols = new Double(doubleCols + 1).intValue();
    	}else {
    		numCols = new Double(doubleCols).intValue();
    	}
    	return "0";
        for (int i = 0; i < numRows;i++) {
        	if (i < numRows/2) {
        		OutputStream[i+ numCols*(numRows+1)] = 
        	}
        }
        
    }
    public static void main(String[] args) {
    	int a = 5;
    	int b = 4;
    	System.out.println(new Double(a)/b);
    }
    
}
