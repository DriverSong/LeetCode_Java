package leetcode;

public class HouseRobber {
    public int rob(int[] nums) {
        int length = nums.length;
        if (length == 0) return 0;
        int[] max = new int[length];
        for(int i = 0; i < length; i++) {
        	if (i == 0) {
        		max[i] = nums[i];
        		continue;
        	}
        	if (i == 1) {
        		max[i] = nums[i];
        		continue;
			}
        	max[i] = (max[i - 2] + nums[i]) > max[i-1] ? (max[i - 2] + nums[i]) : max[i-1];
        }
        return max[length - 1];
    }
}
